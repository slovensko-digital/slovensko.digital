<div class="hero">
</div>

<div class="section activity main-content">
  <div class="container">
    <div class="row">
      <div class="sidebar col-md-3">
        <p class="mb-5"><a href="/zapoj-sa/aktivity">Späť na zoznam aktivít</a></p>
        <div id="contact-us-box">
          <p class="mb-2"><strong>Chceš sa s nami poradiť ako postupovať?</strong></p>
          <p class="mb-0"><small>Neváhaj nám napísať na <strong><a href="mailto:kontakt@slovensko.digital>">kontakt@slovensko.digital</a></strong></small></p>
        </div>
      </div>
      <div class="col-md-9 content-box">
        <p class="mb-0 text-muted"><strong><%= @activity.category %></strong></p>
        <h2 class="mt-3"><%= @activity.title %></h2>
        <%= yield %>
      </div>
    </div>
    <% if @activity.related_activities.length > 0 %>
      <div class="row mt-5">
        <div class="col-xs-12">
          <h3 class="text-center">Ďalšie v kategórii <%= @activity.category %></h3>
        </div>
      </div>
      <div id="list" class="row pt-3 pb-5">
        <% @activity.related_activities.each do |activity| %>
          <%= erb :'participation/_activity_card', locals: { activity: activity } %>
        <% end %>
      </div>
    <% end %>
    <div class="row mt-3 mb-5">
      <div class="col-xs-12 text-center">
        <a href="/zapoj-sa/aktivity" class="btn btn-primary" role="button">Zobraziť všetky aktivity</a>
      </div>
    </div>
  </div>
</div>
