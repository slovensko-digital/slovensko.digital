<div class="hero">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <h1>Aj ty si Slovensko.Digital</h1>
      </div>
    </div>
  </div>
</div>

<div id="activities" class="section">
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <h2 class="text-center">Zoznam aktivít Slovensko.Digital</h2>
        <%= @selected_category %>
      </div>
    </div>
    <div id="filter" class="row mb-5">
      <div class="col-xs-12 text-center">
        <div class="btn-group hidden-xs hidden-sm" role="group">
          <button type="button" class="btn btn-default active" data-category="all">Všetko</button>
          <button type="button" class="btn btn-default category-itckari" data-category="itckari">IT experti</button>
          <button type="button" class="btn btn-default category-obcania" data-category="obcania">Občania</button>
          <button type="button" class="btn btn-default category-politici" data-category="politici">Politici</button>
          <button type="button" class="btn btn-default category-uradnici" data-category="uradnici">Úradníci</button>
          <button type="button" class="btn btn-default category-firmy" data-category="firmy">IT firmy</button>
          <button type="button" class="btn btn-default category-iniciativy" data-category="iniciativy">Občianske iniciatívy</button>
        </div>

        <div class="btn-group-vertical visible-xs visible-sm" role="group">
          <button type="button" class="btn btn-default active" data-category="all">Všetko</button>
          <button type="button" class="btn btn-default category-itckari" data-category="itckari">IT experti</button>
          <button type="button" class="btn btn-default category-obcania" data-category="obcania">Občania</button>
          <button type="button" class="btn btn-default category-politici" data-category="politici">Politici</button>
          <button type="button" class="btn btn-default category-uradnici" data-category="uradnici">Úradníci</button>
          <button type="button" class="btn btn-default category-firmy" data-category="firmy">IT firmy</button>
          <button type="button" class="btn btn-default category-iniciativy" data-category="iniciativy">Občianske iniciatívy</button>
        </div>
      </div>
    </div>
    <div id="list" class="row pt-3 pb-5 mb-5">
      <% @activities.each do |activity| %>
        <%= erb :'participation/_activity_card', locals: { activity: activity } %>
      <% end %>
    </div>
  </div>
</div>

