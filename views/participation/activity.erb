<div class="hero">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <h1>Lepšie digitálne služby štátu <strong>nie sú</strong> sci-fi</h1>
      </div>
    </div>
  </div>
</div>

<div class="section activity">
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <p><%= @activity.category %></p>
        <h2><%= @activity.title %></h2>
      </div>
    </div>
    <%= yield %>
    <div class="row mt-5 mb-3">
      <div class="col-md-offset-3 col-md-6">
        <div style="border: 1.5px solid #204ba3; padding: 2rem;">
          <p>Chceš sa s nami poradiť ako postupovať?</p>
          <p class="mb-0">Neváhaj nám napísať na <strong><a href="mailto:kontakt@slovensko.digital>">kontakt@slovensko.digital</a></strong></p>
        </div>
      </div>
    </div>
    <div class="row mt-5">
      <div class="col-xs-12">
        <h2 class="text-center">Ďalšie v kategórii <%= @activity.category %></h2>
      </div>
    </div>
    <div id="list" class="row pt-3 pb-5">
      <% @related_activities.each do |activity| %>
        <%= erb :'participation/_activity_card', locals: { activity: activity } %>
      <% end %>
    </div>
    <div class="row mt-3 mb-5">
      <div class="col-xs-12 text-center">
        <a href="/zapoj-sa/aktivity" class="btn btn-primary" role="button">Zobraziť všetky aktivity</a>
      </div>
    </div>
  </div>
</div>
